      <div class="background-image" style="background-image: url('/public/img/erik-hansman-PL5VrlAISt4-unsplash.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center center; height: 721px;">
      <div class="container" >
        
        <div class="line-break text-center py-4">
          <!-- <span class="shadow-heading">Welcome to </span -->
          <!-- ><span class="brand-name">LAP<span style="color: red;">4</span>YOU</span> -->
        </div>
        <div class="text-center my-5">
          <!-- EMPOWER YOURSELF WITH THE PERFECT LAPTOP COMPANION BY <b>LAP<span style="color: red;">4</span>YOU</b> -->
          <p class="text-danger mt-0 pt-4 fw-bold"></p>
        </div>
        <div class="row mb-5">
          <h3 class="signup" style="text-align: center; color: antiquewhite;">Sign UP</h3>
          <div class="col-lg-5 mx-auto mb-5">
            <form action="/users/signUp" method="post">
              

              <div class="mb-3">
                <input
                  type="text"
                  class="form-control"
                  id="form-holder"
                  onkeyup="usernameValidator() "
                  name="name"
                  placeholder="Name"
                 
                />
                <span class="text-danger rounded" id="nameInvalid" style="font-size: 0.75rem; "></span>
              </div>
              <div class="mb-3">
                <input
                  class="form-control"
                  id="inputNumber"
                  onkeyup="numberValidator()"
                  name="number"
                  placeholder="Contact Number"
                  
                  type="number"
                />
                <span
                  id="numberInvalid"
                  class="text-danger rounded"
                  style="font-size: 0.75rem; text-transform: none"
                ></span>
              </div>
      
              <div class="mb-3">
                <input
                  class="form-control"
                  id="inputMail"
                  name="email"
                  placeholder="e-Mail"
                  onkeyup="mailValidator()"
                  
                  type="email"
                />
                <span
                  id="mailInvalid"
                  class="text-danger rounded"
                  style="font-size: 0.75rem; text-transform: none"
                ></span>
              </div>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="inputPassword"
                  placeholder="Password"
                  onkeyup="passwordValidator()"
                  name="password"
                  
                />
                <span
                  id="passwordInvalid"
                  class="text-danger rounded"
                  style="font-size: 0.75rem; text-transform: none"
                ></span>
              </div>
              <div class="mb-3">
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  placeholder="Confirm Password"
                  onkeyup="passwordMatch()"
                  name="confirmPassword"
                
                />
                <span
                  id="passwordmatch"
                  class="text-danger rounded"
                  style="font-size: 0.75rem; text-transform: none"
                ></span>
              </div>
              <input
                type="submit"
                id="submitButton"
                class="btn btn-dark w-100"
                value="Send OTP"
              />
            </form>
            <div class="form-footer d-flex justify-content-end">
              <a href="/users/signIn" style="color: antiquewhite;"> Already have an account?</a>
            </div>
          </div>
        </div>
      </div>
    </div>
















